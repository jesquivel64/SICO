{% extends "UNAHSGOBundle::layout.html.twig" %}
{% block content %}
<div class="row-fluid">
<section class="span12">
    <hgroup class="page-header">
      <h1>{{ tipo }} Enviados Del {{ inicio|date("d/m/Y") }} al {{ fin|date("d/m/Y") }} <small>Resultados de la B&uacute;squeda</small></h1>
    </hgroup>
  </section>
</div>
<div class="row-fluid">
  <section class="span12">
    <p>
      Se encontraron {{ count }} resultados
    </p>
    <table class="table table-striped">
      <thead>
          <tr>
            <th class="no-print">Id</th>
            <th>Numero</th>
            <th>Descripcion</th>
            <th>Remitente</th>
            <th>Destinatario</th>
            <th>Emisi&oacute;n</th>
            <th class="no-print">Acciones</th>
          </tr>
      </thead>
      <tbody>
          {% for entity in enviados %}
          <tr>
            <td class="no-print"><a href="{{ path('documento_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.numero }}</td>
            <td>{{ entity.descripcion }}</td>
            <td>{{ entity.autor }}</td>
            <td>{{ entity.destinatario }}</td>
            <td>{{ entity.getFechaDeEnvio|date("d/m/Y") }}</td>
            <td class="no-print">
              <a class="btn btn-primary" href="{{ path('documento_show', { 'id': entity.id }) }}">Mostrar</a>
              <a class="btn btn-success" href="{{ path('documento_edit', { 'id': entity.id }) }}">Editar</a>
            </td>
          </tr>
          {% endfor %}
      </tbody>
    </table>
  </section>
</div>
<div class="row-fluid">
  <section class="span6">
    <form class="no-print" action="{{ path('documento_search_emision') }}" method="get" {{ form_enctype(date_form) }}>
      <fieldset>
        <legend>
          Buscar por Dependencia
        </legend>
        <input type="hidden" name="_method" value="GET" />
        {{ form_widget(date_form) }}
      </fieldset>
      <div class="form-actions">
        <button class="btn btn-primary" type="submit">
          Buscar
        </button>
      </div>
    </form>
  </section>
</div>
{% endblock %}
