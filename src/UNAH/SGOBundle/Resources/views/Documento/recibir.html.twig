{% extends "UNAHSGOBundle::layout.html.twig" %}

{% block content %}
<section class="row">
  <aside class="span3">
    <nav class="sidebar-nav no-print">
      <ul class="nav nav-tabs nav-stacked no-print">
        <li>
          <a href="{{ path('documento_documento', { 'tipo': tipo.id }) }}">Regresar a  {{ tipo.nombre }}s</a>
        </li>
        <li>
          <a href="{{ path('documento_search') }}">Buscar Documentos</a>
        </li>
      </ul>
    </nav>
  </aside>
  <section class="span9 ">
    <hgroup class="page-header">
      <h1>{{ tipo.nombre}} <small>Recepci&oacute;n de Documentos</small></h1>
    </hgroup>
  </section>
</section>
<section class="row">
  <section class="span9 offset3">
    <form action="{{ path('documento_recibir', {'tipo' : tipo.id}) }}" method="post" {{ form_enctype(form) }}>
      {{ form_widget(form) }}
      <div class="form-actions">
        <button class="btn btn-primary" type="submit">
          Guardar {{ tipo }}
        </button>
      </div>
    </form>
  </section>
</section>
{% endblock %}
