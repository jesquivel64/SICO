{% extends "UNAHSGOBundle::layout.html.twig" %}

{% block content %}
<section class="row">
  <aside class="span3">
    <nav class="sidebar-nav no-print">
      <ul class="nav nav-tabs nav-stacked no-print">
        <li>
          <a href="{{ path('documento_documento', { 'tipo': entity.tipo.id }) }}">Regresar a  {{ entity.tipo.nombre }}s</a>
        </li>
        <li>
          <a href="{{ path('documento_show', { 'id': entity.id }) }}">Regresar a {{ entity.tipo }} {% if entity.recibido %} {{ entity.emisor }} {% else %} Enviado {% endif %} {{ entity.numero }}</a>
        </li>
        <li>
          <a href="{{ path('documento_search') }}">Buscar Documentos</a>
        </li>
      </ul>
    </nav>
  </aside>
  <section class="span9">
    <hgroup class="page-header">
      <h1>Editar {{ entity.numero }} <small>{{ entity.tipo }} {% if not entity.recibido %}Enviado{% endif %}</small></h1>
    </hgroup>
  </section>
</section>
<section class="row">
  <section class="span9 offset3">
    {% if entity.recibido %}
    <form action="{{ path('documento_update_recibido', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {% else %}
    <form action="{{ path('documento_update_enviado', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {% endif %}
      <input type="hidden" name="_method" value="PUT" />
      {{ form_widget(edit_form) }}
      <div class="form-actions">
        <button class="btn btn-primary" type="submit">
          Actualizar
        </button>
      </div>
    </form>
    <form action="{{ path('documento_delete', { 'id': entity.id }) }}" method="post">
      <input type="hidden" name="_method" value="DELETE" />
      {{ form_widget(delete_form) }}
      <button class="btn btn-danger" type="submit">
        Eliminar este {{ entity.tipo }}
      </button>
    </form>
  </section>
</section>
{% endblock %}
