{% extends "UNAHSGOBundle::layout.html.twig" %}
{% block content %}
<div class="row">
<section class="span12">
    <hgroup class="page-header">
      <h1>{{ tipo }} <small>Resultados de la B&uacute;squeda</small></h1>
    </hgroup>
  </section>
</div>
<div class="row">
  <section class="span12">
    <p>
      Se encontraron {{ count }} resultados
    </p>
    <table class="table table-striped table-bordered no-more-tables">
      <thead>
        <tr>
          <th class="no-print">Id</th>
          <th>Numero</th>
          <th>Descripcion</th>
          <th>Recibio</th>
          <th>Correspondencia</th>
          <th>Recepci&oacute;n</th>
          <th>Emisi&oacute;n</th>
          <th class="no-print">Acciones</th>
        </tr>
      </thead>
      <tbody>
        {% for entity in documentos %}
        <tr>
          <td class="no-print"><a href="{{ path('documento_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
          <td>{{ entity.numero }}</td>
          <td>{{ entity.descripcion }}</td>
          <td>{{ entity.recibio }}</td>
          <td>{% if entity.recibido %}Recibido{% else %}Enviado{% endif %}</td>
          <td>{{ entity.getFechaDeRecibido|date("d/m/Y") }}</td>
          <td>{{ entity.getFechaDeEmision|date("d/m/Y") }}</td>
          <td class="no-print">
            <a class="btn btn-primary" href="{{ path('documento_show', { 'id': entity.id }) }}">Mostrar</a>
            <a class="btn btn-success" href="{{ path('documento_edit', { 'id': entity.id }) }}">Editar</a>
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </section>
</div>
{% endblock %}
