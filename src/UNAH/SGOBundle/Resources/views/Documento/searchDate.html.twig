{% extends "UNAHSGOBundle::layout.html.twig" %}
{% block content %}
<div class="row">
<section class="span12">
    <hgroup class="page-header">
      <h1>{{ tipo }} Recibidos Del {{ inicio|date("d/m/Y") }} al {{ fin|date("d/m/Y") }} <small>Reporte</small></h1>
    </hgroup>
  </section>
</div>
<div class="row">
  <section class="span12">
    <p>
      Se encontraron {{ count }} resultados
    </p>
    <table class="table table-striped table-bordered no-more-tables">
      <thead>
        <tr>
          <th>N&uacute;mero</th>
          <th>Descripcion</th>
          <th>Recibio</th>
          <th>Recepci&oacute;n</th>
          <th>Emisi&oacute;n</th>
          <th class="no-print">Acciones</th>
        </tr>
      </thead>
      <tbody>
        {% for entity in documentos %}
        <tr>
          <td>{{ entity.numero }}</td>
          <td>{{ entity.descripcion }}</td>
          <td>{{ entity.recibio }}</td>
          <td>{{ entity.getFechaDeRecibido|date("d/m/Y") }}</td>
          <td>{{ entity.getFechaDeEmision|date("d/m/Y") }}</td>
          <td class="no-print">
            <a class="btn btn-primary" href="{{ path('documento_show', { 'id': entity.id }) }}">Mostrar</a>
            <a class="btn btn-success" href="{{ path('documento_edit_recibido', { 'id': entity.id }) }}">Editar</a>
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </section>
</div>
{% endblock %}
