{% extends "UNAHSGOBundle::layout.html.twig" %}

{% block content %}
<div class="container-fluid">
  <section class="row-fluid">
    <aside class="span3">
      <nav class="sidebar-nav no-print">
        <ul class="nav nav-tabs nav-stacked no-print">
          <li>
            <a class="brand" href="{{ path('UNAHSGOBundle_homepage') }}">Inicio</a>
          </li>
          <li>
            <a href="{{ path('documento_search') }}">Buscar Documentos</a>
          </li>
        </ul>
      </nav>
    </aside>
    <hgroup class="span9 page-header">
      <h1>{{ tipo }}s <small> Sistema Integrado de Correspondencia</small></h1>
    </hgroup>
  </section>
  <div class="row-fluid action-nav-normal">
    <section class="span3 offset3 action-nav-button">
      <a title="Recibir un {{ tipo.nombre }}" href="{{ path('documento_recibiendo', { 'tipo': tipo.id }) }}"> <i class="icon-inbox"></i><span>Recibir un {{ tipo.nombre }}</span> </a>
    </section>
    <section class="span3 action-nav-button">
      <a title="Enviar un {{ tipo.nombre }}" href="{{ path('documento_enviando', { 'tipo': tipo.id }) }}"> <i class="icon-envelope"></i><span>Enviar un {{ tipo.nombre }}</span> </a>
    </section>
  </div>
  <div class="row-fluid">
    <section class="span12">
      <table class="table table-striped table-bordered">
        <caption>
          Ultimos {{ tipo }} Recibidos
        </caption>
        <thead>
          <tr>
            <th class="no-print">Id</th>
            <th>Numero</th>
            <th>Descripcion</th>
            <th>Recibio</th>
            <th>Estado</th>
            <th>Recepci&oacute;n</th>
            <th>Emisi&oacute;n</th>
            <th>Emisor</th>
            <th class="no-print">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {% for entity in recibidos %}
          <tr>
            <td class="no-print"><a href="{{ path('documento_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.numero }}</td>
            <td>{{ entity.descripcion }}</td>
            <td>{{ entity.recibio }}</td>
            <td>{{ entity.estado }}</td>
            <td>{{ entity.getFechaDeRecibido|date("d/m/Y") }}</td>
            <td>{{ entity.getFechaDeEmision|date("d/m/Y") }}</td>
            <td>{{ entity.emisor }}</td>
            <td class="no-print">
              <a class="btn btn-primary" href="{{ path('documento_show', { 'id': entity.id }) }}">Mostrar</a>
              <a class="btn btn-success" href="{{ path('documento_edit', { 'id': entity.id }) }}">Editar</a>
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </section>
  </div>
  <div class="row-fluid">
    <section class="span12">
      <table class="table table-striped table-bordered">
        <caption>
          Ultimos {{ tipo }} Enviados
        </caption>
        <thead>
          <tr>
            <th class="no-print">Id</th>
            <th>Numero</th>
            <th>Descripcion</th>
            <th>Remitente</th>
            <th>Destinatario</th>
            <th>Emisi&oacute;n</th>
            <th class="no-print">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {% for entity in enviados %}
          <tr>
            <td class="no-print"><a href="{{ path('documento_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.numero }}</td>
            <td>{{ entity.descripcion }}</td>
            <td>{{ entity.autor }}</td>
            <td>{{ entity.destinatario }}</td>
            <td>{{ entity.getFechaDeEnvio|date("d/m/Y") }}</td>
            <td class="no-print">
              <a class="btn btn-primary" href="{{ path('documento_show', { 'id': entity.id }) }}">Mostrar</a>
              <a class="btn btn-success" href="{{ path('documento_edit', { 'id': entity.id }) }}">Editar</a>
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </section>
  </div>
</div>
{% endblock %}
