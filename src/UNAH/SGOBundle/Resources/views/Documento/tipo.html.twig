{% extends '::base.html.twig' %}
{% block title %}Sistema Integrado de Correspondencia de la ViceRectoria Acad&eacute;mica{% endblock %}
{% block stylesheets %}
<link rel="icon" sizes="16x16" href="{{ asset('favicon.ico') }}">
<link rel="stylesheet" href="{{ asset('bundles/unahsgo/css/bootstrap.css') }}">
<link rel="stylesheet" href="{{ asset('bundles/unahsgo/css/bootstrap-responsive.css') }}">
<link rel="stylesheet" href="{{ asset('bundles/unahsgo/css/jquery-ui.css') }}">
<link rel="stylesheet" href="{{ asset('bundles/unahsgo/css/print.css') }}" media="print">
<link rel="stylesheet" href="{{ asset('bundles/unahsgo/css/application.css') }}">
<link rel="stylesheet" href="{{ asset('bundles/unahsgo/css/font-awesome.min.css') }}">
<style type="text/css">
    body {
        padding-top: 60px;
        padding-bottom: 40px;
    }
    .sidebar-nav {
        padding: 9px 0;
    }

    @media (max-width: 980px) {
        /* Enable use of floated navbar text */
        .navbar-text.pull-right {
            float: none;
            padding-left: 5px;
            padding-right: 5px;
        }
    }

    .form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
        -moz-border-radius: 5px;
        border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
        -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
        box-shadow: 0 1px 2px rgba(0,0,0,.05);
    }
    .form-signin .form-signin-heading, .form-signin .checkbox {
        margin-bottom: 10px;
    }
    .form-signin input[type="text"], .form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
    }
</style>
{% endblock %}
{% block body %}
<header>
  <nav id="top" class="navbar navbar-inverse navbar-fixed-top no-print">
    <div class="navbar-inner">
      <div class="container-fluid">
        <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="brand" href="{{ path('UNAHSGOBundle_homepage') }}">Vicerrectoria Acad&eacute;mica</a>
        <div class="nav-collapse collapse">
          <p class="navbar-text pull-right">
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
            <a href="{{ path('fos_user_security_logout') }}"> {{ 'layout.logout'|trans({}, 'FOSUserBundle') }} </a>
            {% else %}
            <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
            {% endif %}
          </p>
          <ul class="nav">
            <li>
              <a href="{{ path('departamento') }}">Dependencias</a>
            <li>
            <li>
              <a href="{{ path('tipodocumento') }}">Tipos de Documentos</a>
            <li>
            <li>
              <a href="{{ path('documento_search') }}">Buscar Documentos</a>
            </li>
            <li>
              <a href="{{ path('documento') }}">Estad&iacute;sticas</a>
            </li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  </nav>
  {% block heading %}{% endblock %}
</header>
<div class="container-fluid">
  <section class="row-fluid">
    <aside class="span3">
      <nav class="sidebar-nav no-print">
        <ul class="nav nav-tabs nav-stacked no-print">
          <li>
            <a class="brand" href="{{ path('UNAHSGOBundle_homepage') }}">Inicio</a>
          </li>
          <li>
            <a href="{{ path('documento_search') }}">Buscar Documentos</a>
          </li>
        </ul>
      </nav>
    </aside>
    <hgroup class="span9 page-header">
      <h1>{{ tipo }}s <small> Sistema Integrado de Correspondencia</small></h1>
    </hgroup>
  </section>
  <div class="row-fluid action-nav-normal">
    <section class="span3 offset3 action-nav-button">
      <a title="Recibir un {{ tipo.nombre }}" href="{{ path('documento_recibiendo', { 'tipo': tipo.id }) }}"> <i class="icon-inbox"></i><span>Recibir un {{ tipo.nombre }}</span> </a>
    </section>
    <section class="span3 action-nav-button">
      <a title="Enviar un {{ tipo.nombre }}" href="{{ path('documento_enviando', { 'tipo': tipo.id }) }}"> <i class="icon-envelope"></i><span>Enviar un {{ tipo.nombre }}</span> </a>
    </section>
  </div>
  <hr>
  <footer class="row">
    <span class="span12"></span>
  </footer>
</div>
<script src="{{ asset('bundles/unahsgo/js/jquery.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/unahsgo/js/jquery-ui.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/unahsgo/js/bootstrap.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/unahsgo/js/jquery.placeholder.js') }}" type="text/javascript"></script>
<script type="text/javascript">
    $(function() {
        $('input, textarea').placeholder();
        $('.datepicker').datepicker({
            dateFormat : 'dd/mm/yy'
        });
    }); 
</script>
{% endblock %}
