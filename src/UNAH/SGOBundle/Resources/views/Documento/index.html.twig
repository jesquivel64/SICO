{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Documento list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero</th>
                <th>Descripcion</th>
                <th>Autor</th>
                <th>Entregado</th>
                <th>Destinatario</th>
                <th>Recibio</th>
                <th>Fechadeemision</th>
                <th>Fechadeenvio</th>
                <th>Fechaderecibido</th>
                <th>Estado</th>
                <th>Respondido</th>
                <th>Recibido</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('documento_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.numero }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>{{ entity.autor }}</td>
                <td>{{ entity.entregado }}</td>
                <td>{{ entity.destinatario }}</td>
                <td>{{ entity.recibio }}</td>
                <td>{% if entity.fechaDeEmision %}{{ entity.fechaDeEmision|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.fechaDeEnvio %}{{ entity.fechaDeEnvio|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.fechaDeRecibido %}{{ entity.fechaDeRecibido|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.estado }}</td>
                <td>{{ entity.respondido }}</td>
                <td>{{ entity.recibido }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('documento_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('documento_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('documento_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
