{% extends "UNAHSGOBundle::layout.html.twig" %}
{% block content %}
<section class="row-fluid">
  <aside class="span3">
    <nav class="well sidebar-nav">
      <ul class="nav nav-list">
        <li>
          <a href="{{ path('departamento') }}">Regresar a Dependencias</a>
        </li>
        <li>
          <a href="{{ path('departamento_show', { 'id': entity.id }) }}">Regresar a {{ entity.nombre }}</a>
        </li>
      </ul>
    </nav>
  </aside>
  <section class="span6">
    <h1>Editar Dependencia</h1>
    <form action="{{ path('departamento_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
      <input type="hidden" name="_method" value="PUT" />
      {{ form_widget(edit_form) }}
      <div class="form-actions">
        <button class="btn btn-primary" type="submit">
          Actualizar
        </button>
      </div>
    </form>
    <form action="{{ path('departamento_delete', { 'id': entity.id }) }}" method="post">
      <input type="hidden" name="_method" value="DELETE" />
      {{ form_widget(delete_form) }}
      <button class="btn" type="submit">
        Eliminar esta Dependencia
      </button>
    </form>
  </section>
</section>
{% endblock %}
