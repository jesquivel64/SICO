{% extends "UNAHSGOBundle::layout.html.twig" %}
{% block content %}
<section class="row-fluid">
  <aside class="span3">
    <nav class="sidebar-nav">
      <ul class="nav nav-tabs nav-stacked no-print">
        <li>
          <a href="{{ path('salida_new') }}">Registrar Envio de Documento</a>
        </li>
        <li>
          <a href="{{ path('oficio_search') }}">B&uacute;squeda de Oficios</a>
        </li>
      </ul>
    </nav>
  </aside>
  <section class="span6">
    <hgroup class="page-header">
      <h1>Documentos Enviados <small>Sistema Integrado de Correspondencia</small></h1>
    </hgroup>
  </section>
</section>
<section class="row-fluid">
  <section class="span12">
    <table class="table table-striped table-bordered">
      <caption>
        Ultimos Documentos Enviados
      </caption>
      <thead>
        <tr>
          <th class="no-print">Id</th>
          <th>Numero</th>
          <th>Tipo</th>
          <th>Descripcion</th>
          <th>Recibio</th>
          <th>Enviado</th>
          <th>Recepci&oacute;n</th>
          <th>Emisi&oacute;n</th>
          <th class="no-print">Acciones</th>
        </tr>
      </thead>
      <tbody>
        {% for entity in entities %}
        <tr>
          <td class="no-print"><a href="{{ path('salida_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
          <td>{{ entity.numero }}</td>
          <td>{{ entity.tipo }}</td>
          <td>{{ entity.descripcion }}</td>
          <td>{{ entity.recibio }}</td>
          <td>{{ entity.getFechaDeEnvio|date("d/m/Y") }}</td>
          <td>{{ entity.getFechaDeRecibido|date("d/m/Y") }}</td>
          <td>{{ entity.getFechaDeEmision|date("d/m/Y") }}</td>
          <td class="no-print"><a class="btn btn-primary" href="{{ path('salida_show', { 'id': entity.id }) }}">Mostrar</a><a class="btn btn-success" href="{{ path('salida_edit', { 'id': entity.id }) }}">Editar</a> </ul> </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </section>
</section>
{% endblock %}
