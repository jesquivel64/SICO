{% extends "UNAHSGOBundle::layout.html.twig" %}
{% block content %}
<aside class="span3">
  <nav class="well sidebar-nav no-print">
    <ul class="nav nav-list">
      <li>
        <a href="{{ path('oficio_new') }}">Registrar un oficio</a>
      </li>
    </ul>
  </nav>
</aside>
<section class="span9">
  <section class="hero-unit">
    <hgroup>
      <h1>Sistema Gestor de Oficios</h1>
    </hgroup>
    <p>
      B&uacute;squeda de Oficios
    </p>
  </section>
  <section>
    <hgroup>
      <h1>Lista de Oficios</h1>
      <p>
        Dependencia {{ departamento }}
      </p>
    </hgroup>
    <p>
      Se encontraron {{ count }} resultados
    </p>
    <table class="table table-striped">
      <thead>
        <tr>
          <th class="no-print">Id</th>
          <th>Numero</th>
          <th>Descripcion</th>
          <th>Recibio</th>
          <th>Estado</th>
          <th>Recepci&oacute;n</th>
          <th>Emisi&oacute;n</th>
          <th class="no-print">Acciones</th>
        </tr>
      </thead>
      <tbody>
        {% for entity in oficios %}
        <tr>
          <td class="no-print"><a href="{{ path('oficio_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
          <td>{{ entity.numero }}</td>
          <td>{{ entity.descripcion }}</td>
          <td>{{ entity.recibio }}</td>
          <td>{{ entity.estado }}</td>
          <td>{{ entity.getFechaDeRecibido|date("d/m/Y") }}</td>
          <td>{{ entity.getFechaDeEmision|date("d/m/Y") }}</td>
          <td class="no-print"><a class="btn btn-primary" href="{{ path('oficio_show', { 'id': entity.id }) }}">Mostrar</a><a class="btn btn-success" href="{{ path('oficio_edit', { 'id': entity.id }) }}">Editar</a> </ul> </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </section>
  <section class="span3">
    <form class="no-print" action="{{ path('oficio_search_depto_comentario') }}" method="get" {{ form_enctype(depto_form) }}>
      <fieldset>
        <legend>
          Buscar por Dependencia
        </legend>
        <input type="hidden" name="_method" value="GET" />
        {{ form_widget(depto_form) }}
      </fieldset>
      <div class="form-actions">
        <button class="btn btn-primary" type="submit">
          Buscar
        </button>
      </div>
    </form>
  </section>
  {% endblock %}
