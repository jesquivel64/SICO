{% extends "UNAHSGOBundle::layout.html.twig" %}

{% block content %}
<div class="row">
  <section class="span12">
    <div class="page-header">
      <h1>Sistema Integrado de Correspondencia</h1>
    </div>
  </section>
</div>
<div class="row">
  <div class="span10 offset2">
    <div class="row action-nav-normal">
      {% for tipo in tipos %}
      <section class="span4 action-nav-button">
        <a title="{{ tipo.nombre }}" href="{{ path('documento_documento', { 'tipo': tipo.id }) }}">
          <img src="{{ asset('bundles/unahsgo/img/'~ tipo.nombre ~'.png') }}" alt="{{ tipo.nombre }}" />
          <span>{{ tipo.nombre }}</span>
        </a>
      </section>
      {% endfor %}
    </div>
  </div>
</div>
<script src="{{ asset('bundles/unahsgo/js/jquery.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/unahsgo/js/jquery-ui.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/unahsgo/js/bootstrap.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/unahsgo/js/jquery.placeholder.js') }}" type="text/javascript"></script>
<script type="text/javascript">
    $(function() {
        $('input, textarea').placeholder();
        $('.datepicker').datepicker({
            dateFormat : 'dd/mm/yy'
        });
    }); 
</script>
{% endblock %}
